@model RPPP_WebApp.Models.Species

@{
  ViewBag.Title = "Edit species";
}

<form asp-route-id="@Model.Id"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input  asp-for="Name" class="form-control" />
    <div class="form-text"><span asp-validation-for="Name" class="text-danger"></span></div>
  </div>
  <div class="mb-3">
    <label asp-for="NutritionalValues" class="form-label"></label>
    <input asp-for="NutritionalValues" class="form-control" />
    <div class="form-text"><span asp-validation-for="NutritionalValues" class="text-danger"></span></div>
  </div>
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-action="Index"
       asp-route-page="@ViewBag.Page"
       asp-route-sort="@ViewBag.Sort"
       asp-route-ascending="@ViewBag.Ascending"
       class="btn btn-secondary">Cancel</a>
  </div>
  <div asp-validation-summary="All"></div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}