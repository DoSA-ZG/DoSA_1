<table id="template" style="visibility:hidden">
  <tr>
      <td class="text-left col-sm-4">
          <input type="hidden" name="Plants.Index" value="--id--" />
          <input type="hidden" name="Plants[--id--].PlantId" />
          <input type="hidden" name="Plants[--id--].SpeciesId" value="--speciesId--"/>
          <input type="hidden" name="Plants[--id--].Name" value="--name--" />
          --name--                                
      </td>
      <td class="text-center col-sm-1">
          --nv--
      </td>
      <td class="text-center col-sm-1">
          <select class="form-select form-control" name="Plants[--id--].PurposeId" asp-items="@ViewBag.Purposes">
              <option disabled selected value="">Choose purpose</option>
          </select>
      </td>
      <td class="text-right col-sm-3">
            <input min="1" name="Plants[--id--].Quantity" class="form-control" value="--quantity--"/>
      </td>
      <td class="actions">
          <button class="btn btn-sm delete-row" title="Remove"><i class="fa-solid fa-xmark fa-lg"></i></button>
      </td>               
  </tr>
</table>